<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- services -->

	<bean id="serviceClient" class="Bootstrap.ServiceClient">
		<property name="helloService" ref="helloServiceRpcProxy"></property>
	</bean>

	<!-- 服务的代理类 ServiceProxy -->
	<bean id="helloServiceRpcProxy" class="服务代理类">
		<constructor-arg name="interfaceInfo" ref="interfaceInfo"></constructor-arg>
		<constructor-arg name="serverDiscovery" ref="serverDiscovery"></constructor-arg>
	</bean>
	<bean id="interfaceInfo">
		<property name="interfaceName"></property>
		<property name="version"></property>
		<property name="group"></property>
	</bean>
	<bean id="serverDiscovery" class="ServerDiscovery">
		<constructor-arg name="serviceCenterAddr" value="${serviceCenterAddr}"></constructor-arg>
	</bean>



</beans>